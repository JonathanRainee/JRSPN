<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BlujekPharmacy" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <item name="colorPrimary">@color/blue2</item>
        <item name="colorPrimaryVariant">@color/blue1</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/blue5</item>
        <item name="colorSecondaryVariant">@color/blue3</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/white_darker</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.BlujekPharmacy.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BlujekPharmacy.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BlujekPharmacy.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>